{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.3.1",
    },
    "propWrapperFunctions": ["forbidExtraProps"]
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "react/no-did-mount-set-state": 2,
    "react/no-direct-mutation-state": 2,
    "react/jsx-uses-vars": 2,
    "no-undef": 2,
    "semi": 2,
    "react/prop-types": 0,
    "react/jsx-no-bind": 0,
    "react/jsx-no-duplicate-props": 1
  },
  "globals": {
    "GLOBAL": true,
    "global": true,
    "it": false,
    "expect": false,
    "describe": false,
    "console": true
  }
}